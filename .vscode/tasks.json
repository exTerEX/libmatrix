{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cmake",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "command": "cmake",
            "args": [
                "-G",
                "'MinGW Makefiles'",
                "-DCMAKE_BUILD_TYPE=Debug",
                "${workspaceRoot}"
            ]
        },
        {
            "label": "make",
            "type": "shell",
            "command": "mingw32-make.exe",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "dependsOn":["cmake"]
        },
        {
            "label": "build",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "dependsOn": ["make"]
        },
        {
            "label": "Output",
            "type": "shell",
            "command": "bin/matrix",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": ["build"]
        }
    ]
}